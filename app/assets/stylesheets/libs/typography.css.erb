/* Typography */
html,body{font-family:'Helvetica','Arial',sans-serif; }
h1,h2,h3,h4,h5{color:#333; margin: 0px 0px 10px;}
h1{font-size:235%;}
h2{font-size:215%;}
h3{font-size:185.5%;}
h4{font-size:145%;}
h5{font-size:125%}
h6{font-size:110%;font-weight:bold;color:#000;margin-top:5px;margin-bottom:10px;}
.bold{font-weight:700;}
.heading {font-weight: 700; padding: 0px 0px 5px; color: #0076a9; font-size: 14px;}
.common_core_standard header {border-bottom: 1px solid #ccc;}

#main_nav ul li a {color: #fff;text-shadow: 0px 1px 0px rgba(0, 0, 0, 0.7);font-size: 12px;}

.column_list .item a, .listed_item a, .content_list_item {color: #01172B;font-size: 12px;}

#main_nav ul li a:hover, #main_nav ul li a.active, 
.column_list .item a:hover, .column_list .item a:hover, 
.column_list .item a.active, .column_list .item a.active,
.listed_item a:hover, .listed_item a.active {color: #fff;text-shadow: 0px 1px 0px rgba(0, 0, 0, 0.5);}
.listed_item a:hover, .listed_item a.active {color: #fff;text-shadow: 0px 1px 0px rgba(0, 0, 0, 0.5);}