html, body, #wrapper, #sidebar, #content {overflow: hidden;}
#content_scroller, #sidebar_scroller, .scroller {overflow-y: scroll;}
#wrapper, header, #pstock header,
#sidebar, #sidebar_scroller, #sidebar_content, 
#content, #content_scroller, #inner_content, 
#inner_column, #view_port, #inner_view_port, 
#j-main_content,
.viewport,
.full_content, .half_content, .item_properties,
.content_details,
.item,
.column_list .item a,
.column_list .item a img,
.column_list .item .title,
.listed_item, .listed_item a, .listed_item a img, .listed_item a .title,
.content_list_item, .scroll-wrap {position: relative; float: left;box-sizing: border-box;}
.scroll-wrap {padding-bottom: 40px;}
.is_hidden {display:none;}

#inner_content a {display: inline-block;}
#content_scroller, .full_section, .item_properties li, .item {position: relative; width: 100%; box-sizing: border-box;}
.full_content {width: 622px; clear: both;}
.full_content.inset_form {width: 602px;}
.half_content {width: 50%;}
header {text-shadow: 0 1px 2px rgba(0,0,0,0.3); padding: 10px; font-size: 24px; width: 100%;}
#pstock header {text-shadow: none;}
#pstock #content header {padding: 6px 10px; border-bottom: 1px solid #ccc;}
#pstock #content .full_content header {padding: 0px 0px 10px; border: none;}
.inner_content header {padding: 0px;}
.inner_content p {padding: 20px 0px;}
.inner_content p.cluster_title {margin: 0px; padding: 0px 0px 10px 0px; font-weight: 700;}
header.content_header {padding: 0px 0px 10px;}
#pstock header {font-size: 13px;}
.header_title {position: relative; float: left; width: 50%; display: block;}
#master_header {border-bottom: 1px solid #888; z-index: 10; padding-right: 20px;}
#content_header, #inner_content_header {border-bottom: 1px solid #ccc; z-index: 5; padding-right: 20px;}
.view_section_header {border-top: 1px solid #ccc;}

#wrapper {background: #ddd;}
#sidebar {background: #E6EAF0; border-right: 1px solid #B0B0B0; border-top: 1px solid #eee; width: 260px;}
#content {background: #fff; border-top: 1px solid #eee;}
#inner_content, .inner_content {width: 100%;padding: 10px;}
#inner_content.with_columns {padding: 0px;}
#inner_content .view, .full_content {padding: 10px;}

/* Internal */
#column_main ,.column_header, .column_meta, .column_list, 
#inner_column {position: relative;float: left;}
#column_main {background: #DFEDFF; border-right: 1px solid #B1D2F0;}
#inner_column {background: #EFEFEF;border-right: 1px solid #B0B0B0;}
#column_main, #inner_column {width: 200px; box-sizing: content-box;}
.column_meta {width: 200px;}
#column_main .column_header, #inner_column .column_header {font-size: 13px;color: #FFF; width: 100%;background: #6F7986;border-bottom: 1px solid #bdbdbd; border-bottom: 1px solid rgba(0,0,0,0.2);}
#column_main .column_header .title, #inner_column .column_header .title {position: relative;width: 150px;margin: 0px;float: left;padding: 10px;}
#inner_column .column_header .title {padding: 10px 10px 7px;}

#pstock #column_main .column_header, #pstock #inner_column .column_header {background: #E7EBF0; font-size: 12px;}
#pstock #column_main .column_header .title, #pstock #inner_column .column_header .title {padding: 7px 10px;color: #6C7785;}
#pstock #column_main .column_list .item a {padding-left: 35px;}

#column_main .column_list .item a, #column_main .column_list .listed_item a, #column_main .content_list_item {border: none;}
.section_toggle {padding: 6px 10px;color:#01172B; border-bottom: 1px solid #d3d3d3;cursor: pointer;}
.section_toggle .nav_toggle {margin-right: 5px;}

.column_list {width: 200px; position: relative;}

.column_list .item a, .column_list .listed_item a, .content_list_item {border-bottom: 1px solid #bdbdbd; border-bottom: 1px solid rgba(0,0,0,0.2); border-top: 1px solid #f9f9f9; border-top: 1px solid rgba(255,255,255,0.3); position: relative; width: 100%; display: block; padding: 7px 10px 5px; box-sizing: border-box;}
.column_list .listed_item a {padding: 5px;}
.column_list .item a img {position: relative;float: left;background: #FFF;border: 1px solid #AAA;}
.column_list .item .title, .listed_item .title  {padding: 5px;}
.listed_item .activity {float: right;display: block;width: 170px;padding: 0px;text-align: right;}
.listed_item .activity.complete {cursor: pointer;}
.listed_item .title {float: left;width: 100%;}
.column_list .full_content {padding: 5px;}
.listed_item {background: #eee; width: 100%;}
.listed_item.inactive, .item.inactive {opacity: 0.5;}
.listed_item a {width: 100%; padding: 5px;}
.listed_item img {margin-right: 10px;padding: 5px; border: 1px solid #CCC;}
.listed_item.micro img {padding: 0px; border: 0px;margin: 0px;width: 25px; border: 1px solid #666;}
.listed_item.micro .title {width: 76%;}
.listed_item.micro a.active img {border: 1px solid #ddd;}
.viewport img, .inner_content img {position: relative;float: left;margin: 0 10px 0 0;border: 1px solid #CCC;padding: 5px;}
#column_main .item:nth-of-type(even), #column_main .item.even, #column_main .listed_item:nth-of-type(2), #column_main .listed_item.even {background: none;}
.item:nth-of-type(even), .item.even, .listed_item:nth-of-type(even), .listed_item.even {background: #fff;}
.item_properties li {padding: 1px;}
.item_properties li .item_title {font-weight: 700; color: #606976;}

.column_list.bottom_section {position: absolute;bottom: 0px;height: 200px;}

.content_list_item.listed_item .title {width: 50%;padding: 0px 0px 5px 0px;font-size: 14px;font-weight: 700;}
.content_list_item.listed_item.listed_student .title {width: 400px;padding: 5px;font-size: 12px;font-weight: normal;}
.standard_selector .content_list_item.listed_item .title {width: 76%; padding: 5px; font-size: 12px;font-weight: normal;}
.standard_item p {padding: 0px 30px 0px 0px;}

.content_block header {padding-bottom: 10px;}
.content_details li {padding: 0px 0px 5px; color:#606976;}
.content_details a, .modal_link {color: #0088cc;}
.content_details a:hover, .modal_link:hover {text-decoration: underline;}
.video_thumb {height: 80px;}
.question_text {width: 300px;position: relative;float: left;margin: 0px;padding-right: 20px;padding-bottom: 10px;}
#modal_image {max-width: 800px;max-height:600px;}

.viewport .poster_views {padding: 20px; width: 1024px;}
.viewport .poster_view {position: relative; float: left; border: 1px solid #ccc;text-align: center; width: 166px; height: 235px; margin-right: 40px;padding: 5px;overflow: hidden;}
.viewport .poster_view img {width: 166px; border:none; padding:0px;}
.viewport .poster_view .counter_icon {}
.viewport .poster_view .title {position: relative;float: left;display: block;padding: 5px 10px 5px;color: #FFF;background: #888;width: 146px;text-shadow: 0px 1px 0px #000;}


